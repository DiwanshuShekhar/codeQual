import math

a, b, C = map(float, input().split())
S = 0.5 * a * b * math.sin(math.radians(C))
l = math.sqrt(a**2 + b**2 - 2*a*b*math.cos(math.radians(C)))
L = a + b + l
h = S * 2 / a

print("{:.8f}".format(S))
print("{:.8f}".format(L))
print("{:.8f}".format(h))
